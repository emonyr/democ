5.
int count_lines(const char *path){

	FILE *output;
	int lineno=0;

	output = fopen(path,"r");
	if(!output){
		perror("open");
		exit(errno);
	}

	while(!feof(output)){
		if (fgetc(output) == '\n') 
			lineno++;
    	}
	return lineno;
}

